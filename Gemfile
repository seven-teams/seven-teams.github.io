group :jekyll_plugins do
  gem "jekyll-feed"
  gem "jekyll-sitemap"
  gem "hawkins"
  gem "jekyll-paginate", "~> 1.1"
  gem "jekyll-gist", "~> 1.5"
  gem "jekyll-redirect-from", "~> 0.16.0"
  gem "kramdown-parser-gfm", "~> 1.1"
 end

if (Gem.win_platform?)
  gem "wdm", "~> 0.1.0"
  gem "tzinfo"
  gem "tzinfo-data"
end
